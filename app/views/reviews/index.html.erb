<h1>All Reviews</h1>

<table>
  <tr>
    <th>Reviewer Name</th>
    <th>Content</th>
    <th>Episode Season/Number</th>
    <th>Episode Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.reviewer_name %></td>
    <td><%= review.content %></td>
    <td>S:<%= (Episode.find(review.episode_id)).season %>/Ep:<%= (Episode.find(review.episode_id)).episode_number %></td>
    <td><%= (Episode.find(review.episode_id)).title %></td>
    <td><%= link_to 'Show', review %></td>
    <td><%= link_to 'Edit', edit_review_path(review) %></td>
    <td><%= link_to 'Destroy', review, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Review', new_review_path %>
